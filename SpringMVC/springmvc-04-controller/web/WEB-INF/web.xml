    <filter>
        <filter-name>genericEncodingFilter</filter-name>
        <filter-class>com.ming.filter.GenericEncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>genericEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>