<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间=绑定一个对象的Dao、Mapper接口-->
<mapper namespace="com.ming.mapper.UserMapper">

    <update id="updateUser" parameterType="user">
        update user set name = #{name}, pwd = #{pwd} where id = #{id};
    </update>
    
    <delete id="deleteUserById" parameterType="int">
        delete from user where id = #{id}
    </delete>

    <select id="getUserList" resultType="com.ming.pojo.User">
    select * from user
    </select>

    <select id="getUserById" resultType="com.ming.pojo.User" parameterType="int">
        select * from user where id = #{id}
    </select>

    <!--对象中的属性可以直接读取出来-->
    <insert id="addUser" parameterType="com.ming.pojo.User" >
        insert into user (id, name, pwd) values (#{id},#{name},#{pwd})
    </insert>


</mapper>