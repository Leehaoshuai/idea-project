<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="address" class="com.ming.pojo.Address"/>

    <bean id="student" class="com.ming.pojo.Student">
        <!-- 第一种 基本类型注入 直接使用value-->
        <property name="name" value="李灏"/>

        <!-- 第二种 bean注入-->
        <property name="address" ref="address"/>

        <!--第三种 数组注入-->
        <property name="books">
            <array>
                <value>红楼梦</value>
                <value>西游记</value>
                <value>水浒传</value>
                <value>三国演义</value>
            </array>
        </property>

        <!--list-->
        <property name="hobbys">
            <list>
                <value>听歌</value>
                <value>看电影</value>
                <value>踢足球</value>
                <value>睡觉</value>
            </list>
        </property>

        <!--Set-->
        <property name="games">
            <set>
                <value>LOL</value>
                <value>COC</value>
                <value>BOB</value>
            </set>
        </property>

        <!--Map-->
        <property name="card">
            <map>
                <entry key="身份证" value="12355555555645424"/>
                <entry key="银行卡" value="1233445545544"/>
                <entry key="学号" value="112222222"/>
            </map>
        </property>


        
        <!--null-->
        <property name="wife">
            <null/>
        </property>

        <!--properties-->
        <property name="info">
            <props>
                <prop key="学号">123365551</prop>
                <prop key="性别">男性</prop>
                <prop key="username">root</prop>
            </props>
        </property>

    </bean>

</beans>